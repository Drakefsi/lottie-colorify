{
  "name": "lottie-colorify",
  "version": "0.6.0",
  "description": "A library to change lottie animation colors",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Mikayel Saghyan",
  "license": "MIT",
  "homepage": "https://github.com/xxmuaddib/lottie-colorify",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xxmuaddib/lottie-colorify.git"
  },
  "keywords": "lottie",
  "scripts": {
    "build:umd": "tsc --module umd src/index.ts --outDir ./lib/umd",
    "build:amd": "tsc --module amd src/index.ts --outDir ./lib/amd",
    "build:cjs": "tsc",
    "build": "npm run build:amd && npm run build:umd && npm run build:cjs",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "prettier": "^2.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  }
}
